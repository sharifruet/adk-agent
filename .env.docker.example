# Environment Configuration for Docker Compose Setup
# Copy this file to .env and update with your values
# cp .env.docker.example .env

# Application Configuration
APP_NAME=AI Life Insurance Sales Agent
ENVIRONMENT=development
DEBUG=true
APP_VERSION=1.0.0

# Database Configuration (Docker PostgreSQL)
# Connect to PostgreSQL running in Docker Compose
DATABASE_URL=postgresql+asyncpg://lic_agent:lic_agent_password@localhost:5432/lic_agent_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (Docker Redis)
# Connect to Redis running in Docker Compose
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
SESSION_TTL=3600

# LLM Configuration (Docker Ollama)
# Connect to Ollama running in Docker Compose
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
LLM_TIMEOUT=30

# For Cloud LLM Providers (Optional - only if not using Ollama)
# Uncomment and configure if using cloud providers:
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4
# OR
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=your-api-key-here
# ANTHROPIC_MODEL=claude-3-opus-20240229

# Security Configuration
# IMPORTANT: Generate new keys for production!
# Generate encryption key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_GENERATE_A_SECURE_KEY_HERE

# Generate JWT secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_GENERATE_A_SECURE_KEY_HERE
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# File Storage Configuration
FILE_STORAGE_PATH=./data
ENABLE_FILE_STORAGE=true

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Rate Limiting (Optional)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
